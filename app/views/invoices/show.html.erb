<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @invoice.date %>
</p>

<p>
  <strong>Company:</strong>
  <%= @invoice.company %>
</p>

<p>
  <strong>Tax:</strong>
  <%= @invoice.tax %>
</p>

<p>
  <strong>Employee:</strong>
  <%= @invoice.employee.name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @invoice.status %>
</p>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
          <th>Delete?</th>
        </tr>
      </thead>
      <tbody>
        <% running_total = 0 %>
        <% @purchases.each do |purchase| %>
        <tr>
          <td><h4><%= purchase.name %></h4></td>
          <td><h4><%= purchase.category %></h4></td>
          <td><h4><%= purchase.quantity %></h4></td>
          <td><h4><%= number_to_currency purchase.price %></h4></td>
          <td><h4><%= number_to_currency(purchase.quantity * purchase.price) %></h4></td>
          <td>
            <h4>
              <%= link_to "Yes", [@invoice, purchase], method: :delete, data: {
               confirm: "Are you sure you want to delete \"#{purchase.name}\"?" } %>
            </h4>
          </td>
          <% running_total += purchase.quantity * purchase.price %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to "Add New Item", new_invoice_purchase_path(@invoice),
    class: 'pull-right' %>
<br>
<h4 class="pull-right">Invoice total: <%= number_to_currency running_total %></h4>

<%= link_to 'Edit', edit_invoice_path(@invoice) %> |
<%= link_to 'Back', invoices_path %>