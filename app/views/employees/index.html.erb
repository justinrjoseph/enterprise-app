<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Job</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.phone %></td>
            <td><%= employee.job %></td>
            <td><%= link_to 'Show', employee, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee),
                    class: 'btn btn-mini btn-warning' %></td>
            <td><%= link_to 'Destroy', employee, class: 'btn btn-mini btn-danger',
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

